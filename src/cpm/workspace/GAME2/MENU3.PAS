program MenuV3;{ type mStr = string[255]; } { def in _CL.INC }{$I XTSCOMPT.INC}{$I XTSYATLJ.INC} {Joypad include}{$I GAME_CL.INC}{$I GAME_FS.INC}{$I GAME_UX.INC}var  sure: boolean; perso: Character; loaded: boolean; y: integer; button : integer; direction : integer;begin repeat  waitRelPadBtn;  ClrScr;  loaded := ReadPerso(perso);    y := SC_HEIGHT-5;  GotoXY(3, y); write('> '); writeln( 'New Game' );  y := y + 1;  if loaded then  begin    GotoXY(3, y); write('  '); writeln( 'Load Game' );    y := y + 1;  end;  GotoXY(3, y); write('  '); writeln( 'Exit' );    y := 0;  repeat    pollJoypad;    button    := getJoyBtn;    direction := getJoyDir;    if ( direction = UP ) then y := y-1    else if ( direction = DOWN ) then y := y+1;        if ( y < 0 ) then      y := 0    else       begin       if (loaded) and (y > 2) then y := 2       else if not (loaded) and (y > 1) then y := 1;      end;      GotoXY(3, SC_HEIGHT-5); write('  ');    GotoXY(3, SC_HEIGHT-5+1); write('  ');    if ( loaded ) then    begin      GotoXY(3, SC_HEIGHT-5+2); write('  ');    end;        GotoXY(3, y+SC_HEIGHT-5); write('> ');        waitRelPadDir;    bDelay(50);  until ( button <> 0 );  waitRelPadBtn; { wait pad btn released }    if not (loaded) and (y=0) then    begin      runPrg('NEWGAME');    end    else if ( loaded ) and (y = 0) then    begin      sure := confirmBox('Are your Sure ?');      { GotoXY(3, 21); writeln( sure ); }      if (sure) then runPrg('NEWGAME')      else writeln('Oups reload menu');    end    else if ( loaded ) and (y = 1) then    begin      GotoXY(3, 21); writeln( 'Loading Game...' );      { waitPressPadBtn; }      runPrg('PLAY');    end  else    begin      GotoXY(3, 21); writeln( 'Bye.' );      exit;    end;   until ( false );end.