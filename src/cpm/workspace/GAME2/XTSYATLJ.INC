{ Xtase YATL Joystick include }{ @May 2020 }const  UP = 1;  DOWN = 5;  LEFT = 7;  RIGHT = 3;  B1 = 1;  B2 = 2;  BMENU = 4;var  _joystick:  integer;procedure bDelay(time:integer);begin  Bdos(228, (6 shl 8) + (time div 10) );end;procedure pollJoypad;begin _joystick := Bdos(228, (80 shl 8) );end;{ need to call pollJoypad before }function getJoyDir : integer;begin getJoyDir := _joystick div 16;end;{ need to call pollJoypad before }function getJoyBtn : integer;begin getJoyBtn := _joystick mod 16;end;